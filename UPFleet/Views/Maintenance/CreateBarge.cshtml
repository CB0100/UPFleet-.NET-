@model UPFleet.Models.Barge
@{
    ViewData["Title"] = "Add Barge";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">

            <div class="card">
                <div class="card-header">
                    <h3 class="text-center text-primary">Add Barges</h3>
                </div>
                <form method="post" action="@Url.Action("CreateBarge", "Maintenance")" id="formid">
                        <div class="card-body">
                            <div class="form-group">
                                <label name="Barge_Name">Barge Name</label>
                                <input type="text" name="Barge_Name" class="form-control" id="Barge_Name" placeholder="Enter the Barge Name" />
                                <span  id="erBarge_Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label name="Size">Size</label>
                                <input type="text" name="Size" class="form-control" id="size" placeholder="Enter the Size of the Barge" />
                                <span  id="ersize" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label name="Rate">Rate ($)</label>
                                <input type="text" class="form-control" name="Rate" style="text-align:right;" id="rate" value="0" placeholder="Enter the Rate of the Barge" />
                                <span id="errate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label name="Owner">Owner</label>
                                <select name="Owner" id="owner" class="form-control form-select">
                                    @foreach (var item in ViewBag.message)
                                    {
                                        <option value="@item.OwnerName">@item.OwnerName</option>
                                    }
                                </select>
                                <span  id="erowner" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label name="Description">Description</label>
                                <input type="text" class="form-control" name="Description" id="description" placeholder="Enter the Description of the Barge" />
                                <span  id="erdescription" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="display: flex;align-items: center;justify-content: space-between;">
                                <input type="submit" class="btn btn-primary m-2" value="Submit" id="btnid" />
                                <a href="@Url.Action("HomePage", "Home")" class="btn btn-danger m-2 float-sm-end" style="width: 25% !important">Back</a>
                            </div>
                        </div>
                    </form>
            </div>
        </div>
        <div class="col-sm-4"></div>
    </div>
</div>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
@section Scripts{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="~/wwwroot/js/jscreatebarge.js"></script>
}

